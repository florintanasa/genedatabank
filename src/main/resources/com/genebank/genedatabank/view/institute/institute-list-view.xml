<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://instituteListView.title"
      focusComponent="institutesDataGrid">
    <data readOnly="true">
        <collection id="institutesDc"
                    class="com.genebank.genedatabank.entity.Institute">
            <fetchPlan extends="_base"/>
            <loader id="institutesDl">
                <query>
                    <![CDATA[select e from Institute e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="institutesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="institutesDataGrid.create"/>
            <button id="editBtn" action="institutesDataGrid.edit"/>
            <button id="removeBtn" action="institutesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="institutesDl"/>
        </hbox>
        <dataGrid id="institutesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="institutesDc"
                  selectionMode="MULTI">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns>
                <column property="instcode" resizable="true"/>
                <column property="acronym" resizable="true"/>
                <column property="full_name_ro" resizable="true"/>
                <column property="full_name_en" resizable="true"/>
                <column property="address" resizable="true"/>
                <column property="url" resizable="true"/>
                <column property="alpha3" resizable="true"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
